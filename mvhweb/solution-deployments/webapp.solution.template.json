{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServicePlanName": {
            "type": "string",
            "defaultValue": "aspMvAppService"
        },
        "appServiceName": {
            "type": "string",
            "defaultValue": "mvAppService"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
        "linked-template": "https://raw.githubusercontent.com/maroonvillage/mv-azure-arm-templates/main/mvhweb/resource-group-deployments/app-service-plan/template.json?token=AA2XPU3I5JRVUH2AKXOSHSLAQWSAG",
        "linked-template-two": "https://raw.githubusercontent.com/maroonvillage/mv-azure-arm-templates/main/mvhweb/resource-group-deployments/app-service-custom-deployment-slots/template.json?token=AA2XPU47CQIDVHKS4F75UEDAQWSFE"
    },
    "resources": [
        {
            "name": "appServicePlan01",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {"value": "[parameters('appServicePlanName')]"},
                    "location": {"value": "[parameters('location')]"}
                }
            }
        },
        {
            "name": "appService01",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','appServicePlan01')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template-two')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {"value": "[parameters('appServiceName')]"},
                    "location": {"value": "[parameters('location')]"}
                }
            }
        }
    ],
    "outputs": {
       
    }
}